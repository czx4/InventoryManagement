@model Inventorymanagement.ViewModels.ShipmentItemViewModel

@{
    ViewBag.Title = "Edit Shipment";
    Layout = "_Layout";
}

<form asp-action="EditShipment" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExpiryDate" class="form-label"></label>
        <textarea asp-for="ExpiryDate" class="form-control" rows="4"></textarea>
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
