@model InventoryManagment.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Delete Product";
    Layout = "_Layout";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">SKU</dt>
        <dd class="col-sm-10">@Model.SKU</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Reorder level</dt>
        <dd class="col-sm-10">@Model.ReorderLevel</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.SupplierName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
