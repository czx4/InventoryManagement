@model Inventorymanagement.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Edit Product";
    Layout = "_Layout";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SKU" class="form-label"></label>
        <textarea asp-for="SKU" class="form-control" rows="4"></textarea>
        <span asp-validation-for="SKU" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <textarea asp-for="Price" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReorderLevel" class="form-label"></label>
        <textarea asp-for="ReorderLevel" class="form-control" rows="4"></textarea>
        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="Model.Categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SupplierId" class="form-label"></label>
        <select asp-for="SupplierId" class="form-select" asp-items="Model.Suppliers"></select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
